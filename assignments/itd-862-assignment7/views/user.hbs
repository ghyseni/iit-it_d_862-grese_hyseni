<a href="../" title="Reminders" class="btn btn-link px-0 py-4">Go back</a>
<div class="mx-auto reminder">
  {{#if user}}
    <h2>User details</h2>
    <div id="item-{{user._id}}" class="list-group-item flex-column align-items-start item items" data-id="{{user._id}}">
      <div class="d-flex w-100 justify-content-between">
        <h4 class="mb-1"> {{user.name}}</h4>
      </div>
      <p class="mb-1">{{user.email}}</p>

      <a href="{{user.id}}/reminders" class="btn btn-primary  mt-4">View reminders</a>
      <button data-userId="{{this._id}}" class="btn btn-secondary mt-4 delete-user">Delete</button>
    </div>
  {{else}}
    <h2> User not found</h2>
  {{/if}}
</div>
