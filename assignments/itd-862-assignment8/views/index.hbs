<div class="mx-auto">
  <h3>Users</h3>
  <table class="table table-light items">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">E-mail</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      {{#each users}}
        <tr id="item-{{this._id}}" class="item" data-id="{{this._id}}">
          <td>{{this.name}}</td>
          <td>{{this.email}}</td>
          <td>
            <a href="/users/{{this._id}}" class="btn btn-primary view">View</a>
            <button class="btn btn-secondary delete-user ml-2">Delete</button>
          </td>
        </tr>
        {{else}}
          <tr class="not-found">
            <td colspan="3">No users found</td>
          </tr>
      {{/each}}
    </tbody>
  </table>
</div>
<div style="width: 400px;" class="mt-4">
  <h4>Add new user</h4>
  <form action="/users/" method="post">
    <div class="form-group">
      <label for="username">Name</label>
      <input required type="text" id="username" class="form-control" name="username">
    </div>
    <div class="form-group">
      <label for="email">E-mail</label>
      <input required type="email" id="email" class="form-control" name="email">
    </div>
    <button type="submit" class="btn btn-primary add-user">Add</button>
  </form>
</div>
